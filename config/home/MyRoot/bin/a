#!/bin/sh

command -v acmefocused >/dev/null 2>&1 || \
 { echo "install acmefocused"; GO111MODULE=on go get github.com/fhs/acme-lsp/cmd/acmefocused@latest || exit 1; }
command -v L >/dev/null 2>&1 || \
 { echo "install L"; GO111MODULE=on go get github.com/fhs/acme-lsp/cmd/L@latest || exit 1; }
command -v acme-lsp >/dev/null 2>&1 || \
 { echo "install acme-lsp"; GO111MODULE=on go get github.com/fhs/acme-lsp/cmd/acme-lsp@latest || exit 1; }
command -v acme-dot >/dev/null 2>&1 || \
 { echo "install acme-dot"; GO111MODULE=on go get github.com/tw4452852/acme-dot@v1.0.0 || exit 1; }
command -v Watch >/dev/null 2>&1 || \
 { echo "install Watch"; GO111MODULE=on go get 9fans.net/go/acme/Watch@latest || exit 1; }

BROWSER=chromium
PLUMBFILE=$HOME/lib/plumbing
font=/mnt/font/GoMono/11a/font
Font=/mnt/font/WenQuanYiMicroHei/11a/font
tabstop=4
SHELL=$PLAN9/bin/rc
acmeshell=$PLAN9/bin/rc

TERM=dumb
MANPAGER=nobs
PAGER=nobs
EDITOR=E

MANPATH=/usr/local/share/man:/usr/share/man:$PLAN9/man

export BROWSER TERM MANPAGER \
PAGER EDITOR MANPATH SHELL
unset FCEDIT VISUAL

export tabstop acmeshell

[ -z "$(pgrep fontsrv)" ] && fontsrv &
[ -z "$(pgrep plumber)" ] && plumber

if [ -f "$PLUMBFILE" ]; then
	cat "$PLUMBFILE" | 9p write plumb/rules
else
	cat $PLAN9/plumb/basic | 9p write plumb/rules
fi

exec acme -a -f $font -F $Font $*
