set spoolfile="/var/mail/mbox"
set sort=threads

set fast_reply
set include
set indent_str="> "

set folder="/var/mail"
mailboxes "=mbox"
mailboxes "=gmail"
mailboxes "=hotmail"
mailboxes "=golang-china"
mailboxes "=golang-nuts"
mailboxes "=golang-dev"

#subscribe
subscribe golang-china@googlegroups.com
subscribe golang-dev@googlegroups.com
subscribe golang-nuts@googlegroups.com

#bind keys
bind pager G bottom
bind pager gg top
bind pager j next-line
bind pager k previous-line
bind pager \cf next-page
bind pager \cb previous-page

bind index \cf next-page
bind index \cb previous-page
bind index f change-folder
