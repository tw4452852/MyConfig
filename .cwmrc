command term alacritty
command lock 'xautolock -locknow'
command clock "dclock -bg black -led_off black -date '%Y-%b-%d %a' -fontName 'Go Mono' -bw 0"
command acme "/home/tw/MyRoot/bin/a"
command monitor "alacritty --class monitor -e sudo htop"

fontname "WenQuanYi Micro Hei"

sticky yes

ignore dclock
autogroup 9 Dclock
ignore monitor
autogroup 9 monitor,monitor

autogroup 1 acme
autogroup 2 qutebrowser
autogroup 2 Chromium

unbind-key all
unbind-mouse all

bind-key 4S-1		group-only-1
bind-key 4S-2		group-only-2
bind-key 4S-3		group-only-3
bind-key 4S-4		group-only-4
bind-key 4S-5		group-only-5
bind-key 4S-6		group-only-6
bind-key 4S-7		group-only-7
bind-key 4S-8		group-only-8
bind-key 4S-9		group-only-9

bind-key 4-1		group-toggle-1
bind-key 4-2		group-toggle-2
bind-key 4-3		group-toggle-3
bind-key 4-4		group-toggle-4
bind-key 4-5		group-toggle-5
bind-key 4-6		group-toggle-6
bind-key 4-7		group-toggle-7
bind-key 4-8		group-toggle-8
bind-key 4-9		group-toggle-9

bind-key 4C-1		window-movetogroup-1
bind-key 4C-2		window-movetogroup-2
bind-key 4C-3		window-movetogroup-3
bind-key 4C-4		window-movetogroup-4
bind-key 4C-5		window-movetogroup-5
bind-key 4C-6		window-movetogroup-6
bind-key 4C-7		window-movetogroup-7
bind-key 4C-8		window-movetogroup-8
bind-key 4C-9		window-movetogroup-9

bind-mouse 4-1		window-move
bind-mouse 4-3		window-resize
bind-mouse "4"		menu-cmd
bind-key 4-space	menu-ssh
bind-mouse "5"		menu-window
bind-key 4-w		menu-window
bind-key 4-slash	menu-exec
bind-key 4-Return	terminal
bind-key 4-l		lock
bind-key 4C-Tab		group-last
bind-key 4-Tab		window-cycle-ingroup
bind-key 4-g		group-cycle
bind-key 4-m		window-maximize
bind-key 4-x		window-close
bind-key 4C-q		quit
bind-key 4C-r		restart
