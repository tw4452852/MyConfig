#!/usr/bin/env elvish

use str

var pattern
if (> (count $args) 0) {
  set pattern = (str:join ' ' $args)
} else {
  set pattern = (slurp)
}
var cmd = 'rg --no-ignore -e "'$pattern'" -w'

var dir
try {
  set dir = (git rev-parse --show-toplevel 2>/dev/null)
  if (==s $dir $E:HOME) {
    set dir = $pwd
  }
} catch {
  set dir = $pwd
}

fn _main {|dir cmd|
  tmp pwd = $dir
  tmp E:FZF_GHOST = $cmd

  if (has-env WAYLAND_DISPLAY) {
    foot -d error  sh -c $cmd" | f || exit 0"
  } else {
    alacritty -e sh -c $cmd" | f"
  }
}

_main $dir $cmd
